<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jonoon.clubapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name="com.jonoon.clubapp.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jonoon.clubapp.controller.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.jonoon.clubapp.controller.activity.IntroductionActivity"
            android:label="@string/title_activity_introduction"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jonoon.clubapp.controller.activity.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.jonoon.clubapp.controller.activity.WebViewWithLandscapeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
            android:label="@string/title_activity_web_view_with_landscape" >
        </activity>
        <activity
            android:name="com.jonoon.clubapp.controller.BaseActivityWithJavaScriptInterface"
            android:label="@string/title_activity_base_activity_with_java_script_interface" >
        </activity>
    </application>

</manifest>