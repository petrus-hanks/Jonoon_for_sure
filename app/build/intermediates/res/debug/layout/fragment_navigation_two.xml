<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".NavigationOneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:weightSum="3">

            <Button android:id="@+id/bt_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="微社区"
                    android:drawableTop="@drawable/ic_we_community"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="微商城"
                    android:drawableTop="@drawable/ic_mall"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="微票务"
                    android:drawableTop="@drawable/ic_tickets"
                    style="@style/button_styele"/>

        </LinearLayout>

        <LinearLayout android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:weightSum="3">

            <Button android:id="@+id/bt_4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="品牌文化"
                    android:drawableTop="@drawable/ic_culture"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIP"
                    android:drawableTop="@drawable/ic_vip"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:drawableTop="@drawable/ic_news"
                    style="@style/button_styele"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView android:layout_alignParentLeft="true"
               android:src="@drawable/ic_arrow_left"
               android:layout_centerVertical="true"
               android:padding="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

</RelativeLayout>
