<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".NavigationOneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:weightSum="5">

            <Button android:id="@+id/bt_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:drawableTop="@drawable/ic_home"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="足球队"
                    android:drawableTop="@drawable/ic_team"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="俱乐部"
                    android:drawableTop="@drawable/ic_club"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="校园足球"
                    android:drawableTop="@drawable/ic_campus_football"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="微社区"
                    android:drawableTop="@drawable/ic_we_community"
                    style="@style/button_styele"/>

        </LinearLayout>

        <LinearLayout android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:weightSum="5">
            <Button android:id="@+id/bt_6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="新闻"
                    android:drawableTop="@drawable/ic_news"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_7"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="赛程"
                    android:drawableTop="@drawable/ic_fixture"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_8"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商城"
                    android:drawableTop="@drawable/ic_mall"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_9"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="排行榜"
                    android:drawableTop="@drawable/ic_rank"
                    style="@style/button_styele"/>

            <Button android:id="@+id/bt_10"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试"
                    android:drawableTop="@drawable/ic_tickets"
                    style="@style/button_styele"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView android:layout_alignParentRight="true"
               android:src="@drawable/ic_arrow_right"
               android:layout_centerVertical="true"
               android:visibility="invisible"
               android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
