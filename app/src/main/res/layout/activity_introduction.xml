<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.jonoon.clubapp.controller.activity.IntroductionActivity">


    <com.jonoon.clubapp.view.custom_view.ViewFlow
        android:id="@+id/view_flow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sidebuffer="3" />

    <com.jonoon.clubapp.view.custom_view.CircleFlowIndicator
        android:id="@+id/view_flow_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dip"
        app:inactiveType="fill" />

</RelativeLayout>
